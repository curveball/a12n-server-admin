{
    "compilerOptions": {
      "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"]},
      "target": "ESNext",
      "lib": ["DOM", "DOM.Iterable", "ESNext"],
      "jsx": "react-jsx", 
      "module": "ESNext",
      "moduleResolution": "Node",
      "strict": true,
      "resolveJsonModule": true,
      "isolatedModules": true
    },
    "include": [
      "src", 
      "**/*.test.ts", 
      "**/*.test.tsx"
    ]
  }